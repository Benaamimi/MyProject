{% extends "base.html.twig" %}

{% block title %}detail de blogpost{% endblock %}

{% block body %}



  <!-- ARTICLES -->
    <section class="pt-8 pt-md-11">
      <div class="container">
        <div class="row">
          <div class="col-12">

          

          </div>
        </div> <!-- / .row -->
        <div class="row">
          <div class="col-12">


           
            <!-- Card -->
            <div class="mb-7 card card-row shadow-light-lg bg-cover overlay overlay-gradient-dark-end overlay-60 text-white mb-6" style="background-image: url(https://picsum.photos/1000);">
              <div class="row gx-0 justify-content-end">
                <div class="col-12 col-md-6">

                  <!-- Body -->
                  <a class="card-body" href="#!">

                    <!-- Heading -->
                    <h3>
                      {{ blogpost.titre }}
                    </h3>

                    <!-- Text -->
                    <p class="mb-0 text-white-80">
                      {{ blogpost.contenu }}
                    </p>

                  </a>

                  <!-- Meta -->
                  <a class="card-meta" href="#!">

                    <!-- Divider -->
                    <hr class="card-meta-divider bg-white-20">
                    
                    <p class="h6 text-uppercase text-white-80 mb-0 ms-auto">
                      <time>Publier le {{ blogpost.createdAt | date('d/m/Y') }}</time>
										
                    </p>

                  </a>

                </div>
              </div> <!-- / .row -->
            </div>

          </div>
        </div> <!-- / .row -->
      </div> <!-- / .container -->
    </section>

    {% include "commentaire/_form.html.twig" %}
    {% include "commentaire/_commentaire.html.twig" %}


{% endblock %}