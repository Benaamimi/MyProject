{% extends 'base.html.twig' %}

{% block title %}Hello blogpostController!
{% endblock %}

{% block body %}

	<!-- ARTICLES -->
	<section class="pb-8 pt-7 pb-md-11 pt-md-10">
		<div class="container">
			<div class="row">
				<div
					class="col-12">

					<!-- Heading -->
					<h2 class="mb-0">
						Dérnieres actualités
					</h2>

					<!-- Text -->
					<p class="mb-5 text-muted">
						These can be split into smaller grid sizes, though we recommend half or thirds
					</p>
				</div>
			</div>

			<!-- / .row -->
			<div class="row">
				{% for blogpost in blogposts %}

					<div
						class="col-12 col-md-6 col-lg-4 d-flex">
						<!-- Card -->

						<div
							class="card shadow-light-lg lift lift-lg mt-6">

							<!-- Body -->
							<a
								class="card-body my-auto" href="#!">

								<!-- Heading -->
								<h3 class="mt-auto">
									{{ blogpost.titre }}
								</h3>

								<!-- Text -->
								<p class="mb-0 text-muted">
									{{ blogpost.contenu | u.truncate(150, '...', false) }}
								</p>

							</a>

							<!-- Meta -->
							<a
								class="card-meta" href="#!">

								<!-- Divider -->
								<hr
								class="card-meta-divider">

								<!-- Date -->
								<p class="h6 text-uppercase text-muted mb-0 ms-auto">
									<time>Publier le
										{{ blogpost.createdAt | date('d/m/Y') }}</time>
								</p>

							</a>

						</div>
					</div>

				{% endfor %}
			</div>
			<!-- / .row -->
		</div>
		<!-- / .container -->
		<div class="d-flex justify-content-center mt-6">
			{% do blogposts.setPageRange(2) %}
			{{ knp_pagination_render(blogposts, 'base/_pagination.html.twig') }}
		</div>
	</section>
{% endblock %}
