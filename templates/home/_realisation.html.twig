<section class="pt-8 pt-md-11">
	<div class="container">
		<div class="row">
			<div
				class="col-12">

				<!-- Heading -->
				<h2 class="mb-0">
					Mes projets
				</h2>

				<!--  -->
				<p class="mb-5 text-muted">
					réalisation avec Symfony.
				</p>

			</div>
		</div>
		<!-- / .row -->
		<div class="row">
			{% for peinture in peintures %}

				<div
					class="col-12">
					<!-- Card -->
					<div class="card card-row shadow-light-lg mb-6 lift lift-lg" data-aos="fade-right">
						<div class="row gx-0">

							<a
								class="col-12 col-md-6 order-md-2 bg-cover card-img-end" style="background-image: url(https://picsum.photos/2000);" href="#!">

								<!-- Image (placeholder) -->
								<img
								src="{{ peinture.file }}" alt="..." class="img-fluid d-md-none invisible">

								<!-- Shape -->
								<div class="shape shape-start shape-fluid-y text-white d-none d-md-block">
									<svg viewbox="0 0 112 690" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 0h62.759v172C38.62 384 112 517 112 517v173H0V0z" fill="currentColor"/></svg>
								</div>

							</a>
							<div
								class="col-12 col-md-6 order-md-1">

								<!-- Body -->
								<a
									class="card-body" href="#!">

									<!-- Heading -->
									<h3>
										{{ peinture.nom }}
									</h3>

									<!-- Text -->
									<p class="mb-0 text-muted">
										{{ peinture.description | u.truncate(100, '...', false) }}
									</p>

								</a>

								<!-- Meta -->
								<a
									class="card-meta">

									<!-- Divider -->
									<hr
									class="card-meta-divider">

									<!-- Date -->
									<p class="h6 text-uppercase text-muted mb-0 ms-auto">
										<time datetime="2023-10-22">Ajoutée le
											{{ peinture.createdAt | date('d/m/Y') }}</time>
									</p>

								</a>

							</div>

						</div>
						<!-- / .row -->
					</div>

					<!-- Card -->
				</div>

			{% endfor %}

		</div>
		<!-- / .row -->
	</div>
	<!-- / .container -->
</section>
